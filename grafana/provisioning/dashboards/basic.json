{
  "id": null,
  "title": "Basic System & Prometheus Overview",
  "tags": ["auto", "infrastructure"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Prometheus Uptime",
      "targets": [
        {
          "expr": "time() - process_start_time_seconds{job=\"prometheus\"}",
          "legendFormat": "Uptime (s)"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "graph",
      "title": "CPU Usage (Prometheus process)",
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"prometheus\"}[1m])",
          "legendFormat": "CPU seconds/sec"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 9, "h": 6 }
    },
    {
      "type": "graph",
      "title": "Memory Usage",
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"prometheus\"} / 1024 / 1024",
          "legendFormat": "Memory (MB)"
        }
      ],
      "gridPos": { "x": 15, "y": 0, "w": 9, "h": 6 }
    },
    {
      "type": "graph",
      "title": "Disk Space Used (Prometheus data dir)",
      "targets": [
        {
          "expr": "prometheus_tsdb_storage_blocks_bytes_total / 1024 / 1024 / 1024",
          "legendFormat": "TSDB Blocks (GB)"
        }
      ],
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 6 }
    },
    {
      "type": "graph",
      "title": "Active Targets (Scrape Jobs)",
      "targets": [
        {
          "expr": "count(up)",
          "legendFormat": "Targets UP"
        }
      ],
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 6 }
    },
    {
      "type": "graph",
      "title": "Network IO (if node_exporter available)",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total[1m])",
          "legendFormat": "Rx {{device}}"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total[1m])",
          "legendFormat": "Tx {{device}}"
        }
      ],
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 6 }
    }
  ]
}
